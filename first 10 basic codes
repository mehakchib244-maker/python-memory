#find the largest of three numbers
num1 = float(input("enter first number: ")) 
num2 = float(input("enter second number: "))
num3 = float(input("enter third number: "))
if (num1 >= num2) and (num1 >= num3):
    largest = num1
elif (num2 >= num1) and (num2 >= num3):
    largest = num2
else:
    largest = num3
print("the largest number is:", largest)
#prime number check
num = int(input("enter a number to check if it is prime: "))
if num > 1:
    for i in range(2, int(num/2) + 1): #start from 2  1 is not prime and till num/2 becoz any num greater than num/2 cannot divide num
        if (num % i) == 0: #its completely divide and answer is 0its not prime
            print(num, "is not a prime number")
            break
    else:
        print(num, "is a prime number") 
#fibonacci series
n = int(input("enter the number of terms in fibonacci series: "))   
a, b = 0, 1
i = 0 #loop counter
while i < n:#loop runs till i is less than n
    print(a, end=' ') #print current value of a end=' ' is used to print in same line with space
    c = a + b #next term is sum of previous two terms
    a = b #update a to b
    b = c #update b to c
    i += 1
#check leap year or not
year= int(input("enter the year"))
if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
    print(year, "is a leap year")
else:
    print(year, "is not a leap year")

 
