#CREATE A CIRCUMFERENCE and area OF CIRCLE PROGRAM
radius =float(input("Enter the radius of the circle: "))
circumference = 2 * 3.14 * radius
print("The circumference of the circle is:", circumference)
area = 3.14 * radius * radius
print("The area of the circle is:", area)
#CREATE AREA OF TRIANGE PROGRAM
base = float(input("enter the base of the triangle: "))
height = float(input("enter the height of the triangle: "))
area = 0.5*base*height #same name area variable used in circle area it update the values dynamically
print("the area of triangle is:", area)
#SWAP TWO NUMBERS PROGRAM
a = int(input("enter the value of a: "))
b= int(input("enter the value of b: "))
print("before swapping a =", a)
print("before swapping b =", b)
#swapping
val = a
a = b
b = val
print("after swapping a =", a, "after swapping b =", b)
#CALCULATE SIMPLE INTEREST PROGRAM
p= float(input("enter the principal amount: "))
r= float(input("enter the rate of interest: "))
t= float(input("enter the time period: "))
simple_interest = (p*r*t)/100
print("the simple interest is:", simple_interest)
#celsious to fahrenheit
c = float(input("enter temperature in celsious: "))
f = (c * 9/5) + 32
print("the temperature in fahrenheit is:", f)
#AVERAGE OF N NUMBERS PROGRAM
n = int(input("enter how many numbers you want to calculate average for: "))
sum = 0
for i in range(n):
    num= int(input("enter number:"))
    sum =+ num
average = sum/n
print("the average of the numbers is:", average)
#FACTORIAL OF A NUMBER PROGRAM
num = int(input("enter a number to calculate its factorial: "))
factorial = 1
for i in range(1, num + 1):
    factorial = factorial * i
print("the factorial of", num, "is:", factorial)
